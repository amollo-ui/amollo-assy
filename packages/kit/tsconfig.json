{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "inlineSourceMap": false,
    "sourceMap": false,
    "outDir": "build/main",
    "rootDir": "lib",
    "resolveJsonModule": false,
    "module": "commonjs",
    "declaration": true,
    "lib": ["es2017"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["lib/**/*.ts", "@types/*.d.ts"],
  "exclude": ["node_modules/**"]
}
