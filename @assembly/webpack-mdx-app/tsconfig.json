{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "incremental": false,
    "inlineSourceMap": false,
    "sourceMap": false,
    "outDir": "build/main",
    "rootDirs": ["lib", "bin", "src"],
    "resolveJsonModule": false,
    "module": "UMD",
    "declaration": true,
    "lib": ["es2017"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts", "bin/**/*.ts", "src/**/*.ts", "@types/*.d.ts"],
  "exclude": ["node_modules/**"]
}
