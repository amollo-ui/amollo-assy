        "@commitlint/config-conventional": "^17.1.0",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^8.24.0",
        "husky": "^8.0.1",
        "lerna": "^5.5.4",
        "lerna-changelog": "^2.2.0",
        "lint-staged": "^13.0.3",
        "typescript": "^4.8.4"
