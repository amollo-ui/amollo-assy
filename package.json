{
    "name": "amollo-assy",
    "private": true,
    "sideEffect": false,
    "license": "MIT",
    "homepage": "https://github.com/amollo-ui/amollo-assy#readme",
    "repository": {
        "type": "git",
        "url": "git@github.com:amollo-ui/amollo-assy.git"
    },
    "bugs": {
        "url": "https://github.com/amollo-ui/amollo-assy/issues"
    },
    "engines": {
        "node": ">=16.0.0",
        "npm": ">=7.10.0",
        "yarn": ">=1.22"
    },
    "workspaces": {
